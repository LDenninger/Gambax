{
    "name": "gambax-inline-completion",
    "displayName": "Gambax: Inline Completion",
    "description": "Inline completion tool to connect to the Inline Completion service of your local Gambax server.",
    "version": "0.0.1",
    "publisher": "devroc",
    "repository": "",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python",
        "onLanguage:typescript",
        "onLanguage:javascript",
        "onLanguage:cpp",
        "onLanguage:c",
        "onLanguage:csharp",
        "onLanguage:java",
        "onLanguage:rust",
        "onLanguage:go",
        "onCommand:gambax.setDebounceDelay",
        "onCommand:gambax.setContextWindow"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "gambax.setDebounceDelay",
                "title": "Gambax: Set Delay"
            },
            {
                "command": "gambax.setContextWindow",
                "title": "Gambax: Set Context Window Size"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Gambax Inline Completion Settings",
            "properties": {
              "gambax.debounceDelay": {
                "type": "number",
                "default": 1000,
                "description": "Delay time in milliseconds for debouncing the LLM API call."
              },
              "gambax.contextWindowSize": {
                "type": "number",
                "default": 5,
                "description": "Number of lines loaded into context."
              }
            }
          }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./",
        "download-api": "dts dev",
        "postinstall": "npm run download-api"
    },
    "devDependencies": {
        "@types/node": "^16.18.34",
        "@types/node-fetch": "^2.6.12",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "@vscode/dts": "^0.4.0",
        "eslint": "^8.26.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "node-fetch": "^2.6.7"
    }
}
